<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.matteoveroni.mydiary.library.control.LibraryScreenController">
    <stylesheets>
        <URL value="@css/DiaryScreenView.css" />
    </stylesheets>
   <children>
      <Label alignment="CENTER" layoutX="42.0" layoutY="44.0" prefHeight="35.0" prefWidth="721.0" text="Choose a diary to access or create a new one">
         <font>
            <Font size="30.0" />
         </font></Label>
      <TabPane layoutX="41.0" layoutY="111.0" prefHeight="430.0" prefWidth="721.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab fx:id="pane_selectDiary" text="Select Diary">
               <content>
                  <BorderPane prefHeight="259.0" prefWidth="721.0">
                     <center>
                        <ComboBox fx:id="cmb_chooseDiary" prefHeight="25.0" prefWidth="465.0" promptText="Empty" BorderPane.alignment="CENTER" />
                     </center>
                     <left>
                        <Label alignment="CENTER" prefHeight="15.0" prefWidth="247.0" text="Choose a Diary" BorderPane.alignment="CENTER" />
                     </left>
                     <bottom>
                        <Button fx:id="cmd_openDiary" mnemonicParsing="false" onAction="#openSelectedDiary" prefHeight="40.0" prefWidth="140.0" text="Open Diary" BorderPane.alignment="CENTER" />
                     </bottom>
                  </BorderPane>
               </content>
            </Tab>
          <Tab fx:id="pane_createNewDiary" text="Create New Diary">
               <content>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <center>
                        <GridPane BorderPane.alignment="CENTER">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="354.0" minWidth="10.0" prefWidth="252.0" />
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="500.0" minWidth="10.0" prefWidth="469.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <TextField fx:id="txt_newDiaryName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <Label alignment="CENTER" prefHeight="15.0" prefWidth="254.0" text="Diary Name" GridPane.rowIndex="1" />
                           </children>
                        </GridPane>
                     </center>
                     <bottom>
                        <Button fx:id="cmd_createDiary" mnemonicParsing="false" onAction="#createNewDiary" prefHeight="40.0" prefWidth="140.0" text="Create Diary" BorderPane.alignment="CENTER" />
                     </bottom>
                  </BorderPane>
               </content></Tab>
            <Tab fx:id="pane_manageDiary" text="Manage Diary">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
