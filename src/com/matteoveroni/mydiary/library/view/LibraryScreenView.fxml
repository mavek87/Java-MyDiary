<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.matteoveroni.mydiary.library.control.LibraryScreenController">
    <stylesheets>
        <URL value="@css/LibraryScreenView.css" />
    </stylesheets>
   <children>
      <Label alignment="CENTER" layoutX="42.0" layoutY="44.0" prefHeight="35.0" prefWidth="721.0" text="Choose a diary to access or create a new one">
         <font>
            <Font size="30.0" />
         </font></Label>
      <TabPane layoutX="41.0" layoutY="111.0" prefHeight="430.0" prefWidth="721.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab fx:id="tab_selectDiary" closable="false" onSelectionChanged="#tabSelectDiaryActive" text="Select Diary">
               <content>
                  <BorderPane prefHeight="259.0" prefWidth="721.0">
                     <center>
                        <ComboBox fx:id="cmb_chooseDiary" prefHeight="40.0" prefWidth="465.0" promptText="Empty" BorderPane.alignment="CENTER" />
                     </center>
                     <left>
                        <Label alignment="CENTER" prefHeight="15.0" prefWidth="247.0" text="Choose a Diary" BorderPane.alignment="CENTER">
                           <font>
                              <Font size="18.0" />
                           </font></Label>
                     </left>
                     <bottom>
                        <Button fx:id="btn_openDiary" mnemonicParsing="false" onAction="#openSelectedDiary" prefHeight="55.0" prefWidth="160.0" text="Open Diary" BorderPane.alignment="CENTER">
                           <font>
                              <Font size="18.0" />
                           </font></Button>
                     </bottom>
                  </BorderPane>
               </content>
            </Tab>
          <Tab fx:id="tab_createNewDiary" closable="false" onSelectionChanged="#tabCreateNewDiaryActive" text="Create New Diary">
               <content>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <center>
                        <GridPane BorderPane.alignment="CENTER">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="354.0" minWidth="10.0" prefWidth="252.0" />
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="500.0" minWidth="10.0" prefWidth="469.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <TextField fx:id="txt_newDiaryName" prefHeight="40.0" prefWidth="469.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <Label alignment="CENTER" prefHeight="15.0" prefWidth="254.0" text="Diary Name" GridPane.rowIndex="1">
                                 <font>
                                    <Font size="18.0" />
                                 </font></Label>
                           </children>
                        </GridPane>
                     </center>
                     <bottom>
                        <Button fx:id="btn_createDiary" mnemonicParsing="false" onAction="#createNewDiary" prefHeight="55.0" prefWidth="160.0" text="Create Diary" BorderPane.alignment="CENTER">
                           <font>
                              <Font size="18.0" />
                           </font></Button>
                     </bottom>
                  </BorderPane>
               </content></Tab>
            <Tab fx:id="tab_manageDiary" closable="false" onSelectionChanged="#tabManageDiaryActive" text="Manage Diary">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
        </tabs>
      </TabPane>
      <MenuBar fx:id="menu" prefHeight="26.0" prefWidth="803.0">
         <menus>
            <Menu fx:id="menu_file" mnemonicParsing="false" text="File">
               <items>
                  <MenuItem fx:id="menu_settings" mnemonicParsing="false" text="Settings" />
                  <MenuItem fx:id="menu_close" mnemonicParsing="false" onAction="#menuCloseClicked" text="Exit" />
               </items>
            </Menu>
            <Menu fx:id="menu_help" mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem fx:id="menu_about" mnemonicParsing="false" onAction="#menuAboutClicked" text="About" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </children>
</AnchorPane>
