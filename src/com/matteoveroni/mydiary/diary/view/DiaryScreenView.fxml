    <stylesheets>
        <URL value="@css/DiaryScreenView.css" />
    </stylesheets>
    <children>
      <MenuBar fx:id="menu" prefHeight="26.0" prefWidth="800.0">
         <menus>
            <Menu fx:id="menu_file" mnemonicParsing="false" text="File">
               <items>
                  <MenuItem fx:id="menu_settings" mnemonicParsing="false" text="Settings" />
