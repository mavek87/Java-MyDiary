      <Label fx:id="lbl_numberOfNotesTitle" layoutX="448.0" layoutY="27.0" prefHeight="41.0" prefWidth="110.0" text="Number of notes:" />
      <Label fx:id="lbl_diaryOwnerValue" layoutX="100.0" layoutY="26.0" prefHeight="41.0" prefWidth="348.0" />
      <Label fx:id="lbl_numberOfNotes" layoutX="558.0" layoutY="27.0" prefHeight="41.0" prefWidth="232.0" />
    </children>
