                <TableColumn fx:id="tableColumn_Id" prefWidth="42.0" text="Id" />
                <TableColumn fx:id="tableColumn_Title" prefWidth="394.0" text="Title" />
                <TableColumn fx:id="tableColumn_CreationDate" minWidth="0.0" prefWidth="155.0" text="Creation Date" />
                <TableColumn fx:id="tableColumn_LastModificationTimestamp" prefWidth="187.0" text="Last Update" />
            </columns>
        </TableView>
        <Button fx:id="btn_openNote" layoutX="662.0" layoutY="518.0" mnemonicParsing="false" onAction="#goToNoteScreen" prefHeight="41.0" prefWidth="128.0" text="Open" />
